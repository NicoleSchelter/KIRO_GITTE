{
  "enabled": true,
  "name": "Validate config.yaml on save",
  "description": "Load config.yaml via ConfigManager to catch schema or parse errors early.",
  "version": "1",
  "when": { "type": "fileEdited", "patterns": ["PM Assistant/config.yaml"] },
  "then": {
    "type": "runCommand",
    "shell": "powershell",
    "command": "python -c \"from core.config_manager import ConfigManager; ConfigManager('PM Assistant/config.yaml').load(); print('config OK')\""
  }
}

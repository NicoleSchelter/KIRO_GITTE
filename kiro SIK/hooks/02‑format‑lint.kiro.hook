{
  "enabled": true,
  "name": "Format + Lint on save",
  "description": "Format with Black and fix lint with Ruff for the changed file only.",
  "version": "1",
  "when": { "type": "fileEdited", "patterns": ["**/*.py"] },
  "then": {
    "type": "runCommand",
    "shell": "powershell",
    "command": "black \"$env:KIRO_CHANGED_FILE\" ; ruff --fix \"$env:KIRO_CHANGED_FILE\""
  }
}

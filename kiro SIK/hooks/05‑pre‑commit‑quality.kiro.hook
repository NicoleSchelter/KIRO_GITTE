{
  "enabled": true,
  "name": "Pre-commit quality gate",
  "description": "Run formatter, linter, type-checker and quick tests before commit.",
  "version": "1",
  "when": { "type": "preCommit" },
  "then": {
    "type": "runCommand",
    "shell": "powershell",
    "command": "black . ; ruff --fix . ; mypy . ; python -m pytest -q --maxfail=1 --last-failed --disable-warnings"
  }
}

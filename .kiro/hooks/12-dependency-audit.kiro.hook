{
    "enabled": true,
    "name": "Dependency Audit",
    "description": "Checks Python deps for known vulnerabilities",
    "version": "1",
    "when": { "type": "beforeCommit" },
    "then": {
      "type": "runCommands",
      "shell": "bash",
      "commands": [
        "pip-audit -r requirements.txt || true"
      ]
    }
  }
  
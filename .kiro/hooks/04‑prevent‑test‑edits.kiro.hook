{
  "enabled": true,
  "name": "Prevent Risky Test Edits",
  "description": "Blocks edits to legacy tests unless tagged; allows contract/property/type tests",
  "version": "2",
  "when": { "type": "fileStaged", "patterns": ["tests/**/*.py"] },
  "then": {
    "type": "validateCommit",
    "allowPaths": [
      "tests/contracts/**",
      "tests/properties/**",
      "tests/types/**"
    ],
    "requireInSubject": "[ALLOW-TEST-CHANGE]"
  }
}

{
  "enabled": true,
  "name": "Format & Lint",
  "description": "Ruff + Black with excludes",
  "version": "2",
  "when": {
    "type": "fileEdited",
    "patterns": ["src/**/*.py", "tests/**/*.py", "pyproject.toml", "ruff.toml"]
  },
  "then": {
    "type": "runCommands",
    "shell": "bash",
    "commands": [
      "ruff check --fix .",
      "black --force-exclude '(build|dist|.venv|.kiro)' ."
    ]
  }
}

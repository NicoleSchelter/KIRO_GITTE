{
  "enabled": true,
  "name": "Pre-Commit Quality Gate",
  "description": "Lint, typecheck, deterministic tests, security",
  "version": "2",
  "when": { "type": "beforeCommit" },
  "then": {
    "type": "runCommands",
    "shell": "bash",
    "commands": [
      "ruff check .",
      "black --check .",
      "mypy --config-file mypy.ini src",
      "PYTEST_ADDOPTS='-q -m \"not slow and not gpu and not e2e\"' HYPOTHESIS_PROFILE=ci pytest --maxfail=1",
      "bandit -r src -lll"
    ]
  }
}

{
  "enabled": true,
  "name": "Typecheck",
  "description": "Runs mypy in strict mode for the service layer",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": ["src/**/*.py", "mypy.ini"]
  },
  "then": {
    "type": "runCommands",
    "shell": "bash",
    "commands": [
      "mypy --config-file mypy.ini src"
    ]
  }
}

{
  "enabled": true,
  "name": "Typecheck",
  "description": "mypy strict with cache",
  "version": "2",
  "when": { "type": "fileEdited", "patterns": ["src/**/*.py", "mypy.ini"] },
  "then": {
    "type": "runCommands",
    "shell": "bash",
    "commands": [
      "mypy --config-file mypy.ini --cache-dir .mypy_cache src"
    ]
  }
}

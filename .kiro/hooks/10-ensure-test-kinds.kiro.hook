{
    "enabled": true,
    "name": "Ensure Test Kinds",
    "description": "Require contracts/properties/type tests",
    "version": "1",
    "when": { "type": "beforeCommit" },
    "then": {
      "type": "runCommands",
      "shell": "bash",
      "commands": [
        "test -d tests/contracts && ls tests/contracts/test_*.py >/dev/null 2>&1 || { echo '❌ Mindestens 1 Contract-Test erforderlich (tests/contracts/test_*.py)'; exit 1; }",
        "test -d tests/properties && ls tests/properties/test_*.py >/dev/null 2>&1 || { echo '❌ Mindestens 1 Property-Test erforderlich (tests/properties/test_*.py)'; exit 1; }",
        "test -d tests/types && ls tests/types/test_*.py >/dev/null 2>&1 || { echo '❌ Mindestens 1 Typ-Test erforderlich (tests/types/test_*.py)'; exit 1; }"
      ]
    }
  }
  
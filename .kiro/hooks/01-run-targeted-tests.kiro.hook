{
  "enabled": true,
  "name": "Run Targeted Tests",
  "description": "Runs focused tests quickly without slow/gpu/e2e",
  "version": "2",
  "when": { "type": "fileEdited", "patterns": ["src/**/*.py", "tests/**/*.py"] },
  "then": {
    "type": "runCommands",
    "shell": "bash",
    "commands": [
      "pytest -q -m 'not slow and not gpu and not e2e' --maxfail=1"
    ]
  }
}

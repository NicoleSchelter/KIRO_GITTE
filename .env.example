# Environment Configuration Example
# Copy this file to .env and modify values as needed

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_DSN=postgresql://gitte:password@localhost:5432/data_collector

# LLM Configuration
OLLAMA_URL=http://localhost:11434

# Image Generation
SD_MODEL_NAME=runwayml/stable-diffusion-v1-5

# Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Federated Learning
FL_ENABLED=false
FL_SERVER_URL=

# Feature Flags
FEATURE_SAVE_LLM_LOGS=true
FEATURE_USE_FEDERATED_LEARNING=false
FEATURE_ENABLE_CONSISTENCY_CHECK=false
FEATURE_USE_LANGCHAIN=false
FEATURE_ENABLE_IMAGE_GENERATION=true
FEATURE_ENABLE_MINIO_STORAGE=true
FEATURE_ENABLE_AUDIT_LOGGING=true
FEATURE_ENABLE_PALD_EVOLUTION=true
FEATURE_ENABLE_CONSENT_GATE=true